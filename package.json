{
  "name": "node-bootstrap",
  "version": "1.0.0",
  "description": "Bootstrap a Meteor-like NodeJS app",
  "main": "client/app.js",
  "scripts": {
    "transpile": "babel src --out-dir build --presets es2015 --copy-files || true",
    "lint": "esw src || true",
    "buildAll": "npm run transpile && npm run lint && webpack --optimize-minimize",
    "dev-server": "webpack-dev-server --optimize-minimize --content-base build/client --port 3000 --open localhost:3000",
    "express-server": "supervisor --watch build/server --extensions 'js' build/server/server.js",
    "start": "npm run buildAll && npm run dev-server & npm run express-server",
    "server-tests": "jasmine-node build/tests/server --verbose --noStackTrace || true",
    "client-tests": "karma start karma.conf.js --singleRun || true",
    "test": "npm run buildAll && npm run server-tests && npm run client-tests"
  },
  "author": "Abraham Serafino",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "browserify": "^13.0.1",
    "eslint": "^2.10.2",
    "eslint-cli": "^1.1.0",
    "eslint-watch": "^2.1.11",
    "jasmine-core": "^2.4.1",
    "jasmine-node": "^2.0.0",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.5",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.0",
    "karma-phantomjs-launcher": "^1.0.0",
    "node-supervisor": "^1.0.2",
    "phantomjs-prebuilt": "^2.1.7",
    "request": "^2.72.0",
    "uglify-loader": "^1.3.0",
    "watchify": "^3.7.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "express": "^4.13.4",
    "socket.io": "^1.4.6",
    "socket.io-client": "^1.4.6"
  }
}
